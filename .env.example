# H4C Environment Variables Template
# Copy this file to .env and fill in your values

# ======================
# DATABASE CONNECTIONS
# ======================
MONGODB_URI=mongodb://localhost:27017/h4c
REDIS_URL=redis://localhost:6379

# ======================
# DISCORD BOT
# ======================
BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_server_id

# ======================
# SECURITY
# ======================
# Must be at least 32 characters long
ADMIN_JWT_SECRET=your_very_long_random_secret_at_least_32_characters_long_for_security

# ======================
# BLOCKCHAIN APIs
# ======================
ALGORAND_NODE_URL=https://mainnet-api.algonode.cloud
NODELY_INDEXER_URL=https://mainnet-api.4160.nodely.dev
NODELY_INDEXER_API_KEY=your_nodely_api_key_here

# Optional but recommended
ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/your_alchemy_key
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# ======================
# DEX INTEGRATIONS
# ======================
TINYMAN_API=https://mainnet.analytics.tinyman.org/api/v1
ENABLE_TINYMAN=true
ENABLE_PACT=false
PACT_API_BASE=

# ======================
# DISCORD ROLE IDs
# ======================
# Get these from Discord by right-clicking roles (Developer Mode required)
ROLE_CITIZEN_ID=
ROLE_HODL_SHRIMP_ID=
ROLE_HODL_CRAB_ID=
ROLE_HODL_FISH_ID=
ROLE_HODL_DOLPHIN_ID=
ROLE_HODL_SHARK_ID=
ROLE_HODL_WHALE_ID=
ROLE_HODL_TITAN_ID=

# ======================
# PERFORMANCE SETTINGS
# ======================
# Cache TTL for balance lookups (milliseconds)
ALG_BALANCE_TTL_MS=60000

# Auto-awards system
BUCKETS=10
BUCKET_PERIOD_MIN=5
SCAN_CONCURRENCY=3
SCAN_SPACING_MS=1000

# API rate limiting
GLOBAL_CALL_BUDGET_5M=300

# ======================
# RATE LIMITING
# ======================
# Public API rate limits
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_TOKENS=120
RATE_LIMIT_REFILL_PER_SEC=2
RATE_LIMIT_BURST=20

# Admin API rate limits
ADMIN_RATE_LIMIT_WINDOW_MS=60000
ADMIN_RATE_LIMIT_MAX_TOKENS=30
ADMIN_RATE_LIMIT_REFILL_PER_SEC=1
ADMIN_RATE_LIMIT_BURST=5

# Comma-separated list of IP prefixes allowed for admin endpoints
ADMIN_IP_ALLOWLIST=127.0.0.1,10.0.0

# ======================
# CACHE SETTINGS
# ======================
# Reputation cache TTL (seconds)
REP_V2_TTL_SECS=900

# LP snapshot cache TTL (seconds)
LP_SNAPSHOT_TTL_SECS=7200

# ======================
# WEB FRONTEND
# ======================
NEXT_PUBLIC_SITE_URL=http://localhost:3001
ALGO_USD_FALLBACK=0.20

# Optional: Bot API URL for web frontend to call
BOT_API_URL=http://localhost:3000

# ======================
# DEVELOPMENT/LOGGING
# ======================
NODE_ENV=development
LOG_LEVEL=info

# ======================
# OPTIONAL INTEGRATIONS
# ======================
# Add your email service API keys here
# SENDGRID_API_KEY=
# MAILCHIMP_API_KEY=
# DISCORD_WEBHOOK_URL=
